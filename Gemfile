source 'http://gemcutter.org'
 
bin_path 'gbin'
disable_system_gems

only :runtime do
  gem 'addressable', :require_as => 'addressable/uri'
end
 
only :development do
  gem 'bundler'
  gem 'jeweler'
  gem 'bundler'
  gem 'rspec', :require_as => 'spec'
  gem 'ZenTest'
  gem 'rake'
  gem 'rcov'
  gem 'ruby-debug'
  gem 'yard'
end
